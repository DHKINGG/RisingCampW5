<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#1c2023">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search_summoner_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_search_summoner_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/summoner_profile"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                app:riv_corner_radius="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_rank_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/summoner_rank_icon"
            app:layout_constraintLeft_toRightOf="@id/cl_search_summoner_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_rank_tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P4"
            android:textColor="#6c757a"
            android:textSize="11dp"
            app:layout_constraintLeft_toRightOf="@id/iv_rank_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="3dp"/>

        <TextView
            android:id="@+id/tv_search_summoner_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adkasld"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/cl_search_summoner_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_rank_tier"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/btn_search_delete"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:src="@drawable/search_delete_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/iv_search_favorite"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/search_favorite_icon"
            app:layout_constraintRight_toRightOf="@+id/btn_search_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginRight="25dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#262b2f"
        android:layout_marginBottom="1dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

